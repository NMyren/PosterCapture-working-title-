<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.droid.mooresoft.postercapture">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".debug.MyActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".debug.TextViewActivity" />

        <receiver android:name=".controller.NotificationStatusReciever">
            <intent-filter>
                <action android:name="com.droid.mooresoft.postercapture.action.NOTIFICATION_CLEARED" />
            </intent-filter>
        </receiver>

        <service android:name=".controller.TaskService" />
    </application>
</manifest>
